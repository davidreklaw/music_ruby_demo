<p style="color: green"><%= notice %></p>

<h1>Playlists</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Options</th>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td>
          <%= playlist.name %>
        <td>

        <td>
          <%= link_to "Show this playlist", playlist %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New playlist", new_playlist_path %>
