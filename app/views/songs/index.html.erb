<p style="color: green"><%= notice %></p>

<h1>Songs</h1>

<div class="table-container">

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Release Date</th>
        <th>Artist</th>
        <th>Album</th>
        <th>Options</th>
      </tr>
    </thead>

    <tbody>
        <% @songs.each do |song| %>
          <tr>
            <td>
              <%= song.title%>
            </td>

            <td>
              <%= song.genre%>
            </td>

            <td>
              <%= song.release_data%>
            </td>

            <td>
              <%= song.artist_id%>
            </td>

            <td>
              <%= song.album%>
            </td>
            
            <td>
              <%= link_to "Show this song", song %>
            </td>
          </tr>
        <% end %>
        <tfoot></tfoot>
    </tbody>
  </table>
  <%= will_paginate @songs %>

</div>

<button style="margin-top: 10px"><%= link_to "New song", new_song_path %></button>
